{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@producer/*": ["src/producer/*"],
      "@consumer/*": ["src/consumer/*"],
      "@mocks/*": ["src/mocks/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
